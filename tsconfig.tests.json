{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,

    "module": "ESNext",

    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,

    "moduleResolution": "bundler",

    "esModuleInterop": true,

    "types": [],

    "lib": ["ES2022", "DOM"],

    "jsx": "react-jsx",
    "jsxImportSource": "vue"
  },
  "include": [
    "./vitest.config.ts",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "./tsconfig.tests.json"
  ]
}
